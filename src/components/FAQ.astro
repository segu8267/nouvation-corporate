---

<section data-section-theme="light" class="py-24 md:py-32 bg-[#F6F6EE]">
  <div class="max-w-3xl mx-auto px-4 sm:px-6">
    <!-- Section Title -->
    <h2 class="text-3xl md:text-5xl font-bold text-center mb-16 leading-[1.2] text-[#231815] fade-up">
      <span class="font-maru">Q&A</span>
    </h2>

    <!-- FAQ Items -->
    <div class="space-y-12">
      {faqGroups.map((group) => (
        <div class="fade-up">
          {group.title && (
            <h3 class="text-sm font-bold text-[#2e7d32] mb-6 flex items-center">
              <span class="w-1 h-4 bg-[#2e7d32] mr-2"></span>
              {group.title}
            </h3>
          )}
          <div class="space-y-4">
            {group.items.map((item) => (
              <div class="bg-white border border-[#231815]/10 rounded-2xl p-6 md:p-8 hover:shadow-md transition-shadow">
                <h4 class="font-bold text-[#231815] mb-3 text-base md:text-lg">{item.question}</h4>
                <p class="text-sm md:text-base text-[#231815] leading-loose opacity-80">{item.answer}</p>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>