---
import Layout from '../layouts/Layout.astro';
---

<Layout title="サイトマップ | NOUVATION">
  <main class="min-h-screen bg-[#F4F4F5] py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h1 class="font-display text-4xl md:text-5xl font-bold mb-12 text-[#1F2937] text-center">
        サイトマップ
      </h1>

      <div class="bg-white rounded-2xl p-8 md:p-12 shadow-lg">
        <!-- メインコンテンツ -->
        <section class="mb-12">
          <h2 class="font-display text-2xl font-bold mb-6 text-[#1B5E20]">メインコンテンツ</h2>
          <ul class="space-y-3">
            <li>
              <a 
                href="/" 
                class="text-[#1F2937] hover:text-[#1B5E20] transition-colors focus:outline-none rounded px-2 py-1"
              >
                トップページ
              </a>
            </li>
            <li>
              <a 
                href="/#news" 
                class="text-[#1F2937] hover:text-[#1B5E20] transition-colors focus:outline-none rounded px-2 py-1"
              >
                News（お知らせ）
              </a>
            </li>
            <li>
              <a 
                href="/#mission" 
                class="text-[#1F2937] hover:text-[#1B5E20] transition-colors focus:outline-none rounded px-2 py-1"
              >
                Mission（ミッション）
              </a>
            </li>
            <li>
              <a 
                href="/#services" 
                class="text-[#1F2937] hover:text-[#1B5E20] transition-colors focus:outline-none rounded px-2 py-1"
              >
                Services（サービス）
              </a>
            </li>
            <li>
              <a 
                href="/#story" 
                class="text-[#1F2937] hover:text-[#1B5E20] transition-colors focus:outline-none rounded px-2 py-1"
              >
                Story（ストーリー）
              </a>
            </li>
            <li>
              <a 
                href="/#voice" 
                class="text-[#1F2937] hover:text-[#1B5E20] transition-colors focus:outline-none rounded px-2 py-1"
              >
                Voice（利用者の声）
              </a>
            </li>
          </ul>
        </section>

        <!-- 法的ページ -->
        <section class="mb-12">
          <h2 class="font-display text-2xl font-bold mb-6 text-[#1B5E20]">法的ページ</h2>
          <ul class="space-y-3">
            <li>
              <a 
                href="#" 
                class="text-[#1F2937] hover:text-[#1B5E20] transition-colors focus:outline-none rounded px-2 py-1"
              >
                プライバシーポリシー
              </a>
            </li>
            <li>
              <a 
                href="#" 
                class="text-[#1F2937] hover:text-[#1B5E20] transition-colors focus:outline-none rounded px-2 py-1"
              >
                特定商取引法に基づく表記
              </a>
            </li>
            <li>
              <a 
                href="#" 
                class="text-[#1F2937] hover:text-[#1B5E20] transition-colors focus:outline-none rounded px-2 py-1"
              >
                お問い合わせ
              </a>
            </li>
          </ul>
        </section>

        <!-- その他 -->
        <section>
          <h2 class="font-display text-2xl font-bold mb-6 text-[#1B5E20]">その他</h2>
          <ul class="space-y-3">
            <li>
              <a 
                href="/sitemap" 
                class="text-[#1F2937] hover:text-[#1B5E20] transition-colors focus:outline-none rounded px-2 py-1"
              >
                サイトマップ（このページ）
              </a>
            </li>
          </ul>
        </section>
      </div>
    </div>
  </main>
</Layout>

